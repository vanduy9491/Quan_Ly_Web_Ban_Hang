@model Login
@{
    ViewBag.Titl = "Register";
}
<div class="bg order-1 order-md-2"><img style="width:100%; height:100%" src="~/Images/login.jpg" /> </div>
<div class="contents order-2 order-md-1">

    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-7">
                <div class="mb-4">
                    <h3>Sign In</h3>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewBag.Error
                        <button type="button" class="close" data-dismiss="alert" aria-label="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="form-group first">
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger w-100"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger w-100"></span>
                    </div>

                    <button type="submit" class="btn btn-block btn-primary">Sign In</button>

                    @*<span class="d-block text-center my-4 text-muted">&mdash; or &mdash;</span>

                    <div class="social-login">
                        <a href="#" class="facebook btn d-flex justify-content-center align-items-center">
                            <span class="icon-facebook mr-3"></span> SignUp with Facebook
                        </a>
                        <a href="#" class="twitter btn d-flex justify-content-center align-items-center">
                            <span class="icon-twitter mr-3"></span> SignUp with  Twitter
                        </a>
                        <a href="#" class="google btn d-flex justify-content-center align-items-center">
                            <span class="icon-google mr-3"></span> SignUp with  Google
                        </a>
                    </div>*@
                </form>
                <span class="d-block text-center my-4 text-muted">&mdash; or &mdash;</span>
                <div>
                    <a asp-controller="Account" asp-action="Register" class=" d-flex justify-content-center align-items-center">
                        Creat new account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>